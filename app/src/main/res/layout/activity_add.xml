<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.autapplication.AddActivity">

    <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/ic_assignment_black_24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/imageView3"/>

    <EditText
            android:id="@+id/titleEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Title"
            android:backgroundTint="#0066ff"
            android:textSize="25dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.448"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionEditText"
            android:backgroundTint="#0066ff"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.494"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Description:"
              android:textSize="20dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/textView2" android:layout_marginTop="140dp"
              app:layout_constraintTop_toBottomOf="@+id/titleEditText" app:layout_constraintHorizontal_bias="0.059"/>

    <ImageView android:layout_width="40dp"
               android:layout_height="40dp"
               app:srcCompat="@drawable/ic_monetization_on_black_24dp"
               app:layout_constraintBottom_toTopOf="@+id/btnAdd"
               android:layout_margin="8dp"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:id="@+id/imageView"
               android:layout_marginBottom="24dp" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="@+id/coinsEditText" app:layout_constraintVertical_bias="0.0"/>

    <EditText
            android:id="@+id/coinsEditText"
            android:layout_width="100dp"
            android:hint="coins"
            android:gravity="center"
            android:backgroundTint="#0066ff"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btnAdd"
            app:layout_constraintEnd_toStartOf="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionEditText" app:layout_constraintVertical_bias="0.735"
            android:layout_marginEnd="8dp"/>

    <Button
            android:text="Add"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd"
            android:background="@drawable/log_button"
            android:textColor="#ffff"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="200dp"
            android:layout_marginBottom="88dp"

            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
